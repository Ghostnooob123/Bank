<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="createTable-bank_account" author="Ivo">
        <createTable tableName="bank_account">
            <column name="AccountHolderUniqueId" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="AccountHolderName" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="AccountHolderCreditDebitCard" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="AccountHolderBalance" type="DOUBLE PRECISION">
                <constraints nullable="false"/>
            </column>
            <column name="AccountHolderDob" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="AccountHolderLastTransactionDate" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>